{
    "name": "cloudtitan-worker",
    "version": "1.0.0",
    "description": "cloudtitan worker",
    "main": "./src/cloudtitan.js",
    "bin": "./build/cloudtitan.js",
    "author": "Jorge Prendes",
    "license": "MIT",
    "scripts": {
        "build": "run-s build:clean build:bundle build:package build:gzip",
        "build:clean": "rimraf build ../dist/cloudtitan-worker ../dist/cloudtitan-worker.gz",
        "build:bundle": "webpack",
        "build:package": "pkg ./package.json -C Brotli -t node16-linux-x64 -o ../dist/cloudtitan-worker",
        "build:gzip": "gzip -k ../dist/cloudtitan-worker"
    },
    "pkg": {
        "assets": [
            "build/*.node",
            "sandbox/**/*",
            "assets/**/*"
        ]
    },
    "dependencies": {
        "cloudtitan-common": "file:../common",
        "command-line-args": "^5.2.1",
        "command-line-usage": "^6.1.3",
        "fs-extra": "^10.1.0",
        "level": "^8.0.0",
        "node-pty": "^0.10.1",
        "uuid": "^8.3.2",
        "ws": "^8.8.0"
    },
    "type": "module",
    "devDependencies": {
        "eslint": "^8.19.0",
        "eslint-config-airbnb-base": "^15.0.0",
        "eslint-plugin-import": "^2.26.0",
        "node-loader": "^2.0.0",
        "npm-run-all": "^4.1.5",
        "pkg": "^5.8.0",
        "rimraf": "^3.0.2",
        "webpack": "^5.73.0",
        "webpack-cli": "^4.10.0"
    }
}
